generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/data.db"
}

model Channel {
  id       Int     @id @default(autoincrement())
  username String  @unique
  title    String
  videos   Video[]
}

model Video {
  id        Int     @id @default(autoincrement())
  title     String
  filename  String  @unique
  thumbnail String
  channel   Channel @relation(fields: [channelId], references: [id])
  channelId Int
}
